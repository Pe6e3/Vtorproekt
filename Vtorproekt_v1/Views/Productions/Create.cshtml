@using VtorP.Models;
@model VtorP.Models.Production

@{
    ViewData["Title"] = "Новая строка производства";
}

<h1>Новая строка производства</h1>

<h4>Добавить</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @* № тюка и фамилия*@
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="BaleId" class="control-label">@Html.DisplayNameFor(model=>model.BaleId)</label>
                    <select asp-for="BaleId" class="form-control">
                        @foreach (Bale bale in ViewBag.BaleEmpty)
                        {
                            <option value="@bale.BaleId"> @bale.BaleId - @bale.Material.MaterialNameFinish (@bale.Employee.EmployeeName)</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="BaleId" class="text-danger"></span>
            </div>


            @*Вес*@
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>


            @*Склад*@
            <div class="form-group">
                <label asp-for="StorageId" class="control-label">@Html.DisplayNameFor(model=>model.Storage.StorageId) </label>
                <select asp-for="StorageId" class="form-control">

                    @foreach (Storage storage in ViewBag.Storage)
                    {
                        <option value="@storage.StorageId">@storage.StorageAdress</option>
                    }
                </select>
            </div>


            @*Дата производства*@
            <div class="form-group">
                <label asp-for="ProduceDate" class="control-label">@Html.DisplayNameFor(model=>model.ProduceDate)</label>
                <input type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" asp-for="ProduceDate" class="form-control" />
                <span asp-validation-for="ProduceDate" class="text-danger"></span>
            </div>



            @*Иконка Создать*@
            <div class="form-group">
                <button type="submit" style="background: none; border: none;">
                    <img src="/ico/add2.png" alt="Create" class="iconBig" />
                </button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку сотрудников</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-group {
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .control-label {
        margin-top: 7px;
        margin-bottom: 7px;
    }
</style>