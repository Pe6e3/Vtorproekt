@model Vtorproekt.Models.Tax

@{
    ViewData["Title"] = "Изменить тариф";
}

<h1>Изменить тариф</h1>

<h4>@Model.WorkType.WorkTypeName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaxId" />

            <div class="form-group">
                <label asp-for="DateTax" class="control-label"></label>
                <input type="datetime-local" value="@ViewBag.TaxDateValue.ToString("yyyy-MM-ddTHH:mm")" asp-for="DateTax" class="form-control" />
                <span asp-validation-for="DateTax" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkTypeId" class="control-label"></label>
                <select asp-for="WorkTypeId" class="form-select" asp-items="@ViewBag.WorkTypes">
                </select>
                <span asp-validation-for="WorkTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaterialId" class="control-label"></label>
                <select asp-for="MaterialId" class="form-select" asp-items="@ViewBag.Materials">
                </select>
                <span asp-validation-for="MaterialId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TaxValue" class="control-label"></label>
                <input asp-for="TaxValue" class="form-control" />
                <span asp-validation-for="TaxValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit1" class="control-label"></label>
                <input asp-for="Limit1" class="form-control" />
                <span asp-validation-for="Limit1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit2" class="control-label"></label>
                <input asp-for="Limit2" class="form-control" />
                <span asp-validation-for="Limit2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit3" class="control-label"></label>
                <input asp-for="Limit3" class="form-control" />
                <span asp-validation-for="Limit3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Multi1" class="control-label"></label>
                <input asp-for="Multi1" class="form-control" />
                <span asp-validation-for="Multi1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Multi2" class="control-label"></label>
                <input asp-for="Multi2" class="form-control" />
                <span asp-validation-for="Multi2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Multi3" class="control-label"></label>
                <input asp-for="Multi3" class="form-control" />
                <span asp-validation-for="Multi3" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <button type="submit" value="Save" style="background: none; border: none;">
                    <img src="/ico/save.png" alt="Create" class="iconBig"  />
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .form-group {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .control-label {
        margin-top: 7px;
        margin-bottom: 7px;
    }
</style>
