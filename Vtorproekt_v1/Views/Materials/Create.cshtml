@model Vtorproekt.Models.Material

@{
    ViewData["Title"] = "Новый вид сырья";
}

<h1>Новый вид сырья</h1>

<h4>Добавить</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaterialNameStart" class="control-label"></label>
                <input asp-for="MaterialNameStart" class="form-control" />
                <span asp-validation-for="MaterialNameStart" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group">
                <button type="submit" style="background: none; border: none;">
                    <img src="/ico/add2.png" alt="Create" class="iconBig" />
                </button>
            </div>




        </form>
    </div>
</div>

<div>
    <a asp-action="Index">назад к списку Видов сырья</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
