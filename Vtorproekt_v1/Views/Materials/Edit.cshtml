@model VtorP.Models.Material

@{
    ViewData["Title"] = "Изменить виды сырья";
}

<h1>Изменить виды сырья</h1>

<h4>Редактировать</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaterialId" />
            <div class="form-group">
                <label asp-for="MaterialNameStart" class="control-label"></label>
                <input asp-for="MaterialNameStart" class="form-control" />
                <span asp-validation-for="MaterialNameStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialNameFinish" class="control-label"></label>
                <input asp-for="MaterialNameFinish" class="form-control" />
                <span asp-validation-for="MaterialNameFinish" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Save" style="background: none; border: none;">
                    <img src="/ico/save.png" alt="Изменить" class="iconBig" />
                </button>
            </div>
        </form>
    </div>
</div>
            <br/>

<div>
    <a asp-action="Index">Вернуться к видам сырья</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
