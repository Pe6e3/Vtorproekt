@model IEnumerable<Vtorproekt.Models.Employee>

@{
    ViewData["Title"] = "Сотрудники";
}

<h2>Сотрудники</h2>

<p class="text-center">
    <b > Добавить</b>
    <a asp-action="Create"><img src="/ico/add1.png" class="icon" /></a>

</p>
<table class="table text-center">
    <thead>
        <tr class="table-header">
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>Действия с работником</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId"><img src="/ico/edit2.png" class="icon" /></a>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId"><img src="/ico/info1.png" class="icon" /></a>
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId"><img src="/ico/delete2.png" class="icon" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>

    img {
        height: calc(15px + 1vw);
        margin-right: 5px;
        width: auto;
    }

    .table {
        width: 50%;
    }

</style>