@model IEnumerable<VtorP.Models.WorkType>

@{
    ViewData["Title"] = "Виды работ";
}

<h2>Виды работ</h2>

<p class="text-center">
    <b> Добавить</b>
    <a asp-action="Create"><img src="/ico/add1.png" class="icon" /></a>

</p>
<table class="table text-center">
    <thead>
        <tr class="table-header">
            <th>
                <a asp-action="Index" asp-route-sortOrder="@("WorkTypeName_asc".Equals(ViewData["SortOrder"]) ? "WorkTypeName_desc" : "WorkTypeName_asc")">Вид работы</a>
            </th>
           
            <th>Действия с видом работы</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkTypeName)
            </td>
          
            <td>
                    <a asp-action="Edit" asp-route-id="@item.WorkTypeId"><img src="/ico/edit2.png" class="icon" /></a>
                    <a asp-action="Details" asp-route-id="@item.WorkTypeId"><img src="/ico/info1.png" class="icon" /></a>
                    <a asp-action="Delete" asp-route-id="@item.WorkTypeId"><img src="/ico/delete2.png" class="icon" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>

    img {
        height: calc(15px + 1vw);
        margin-right: 5px;
        width: auto;
    }

    .table {
        width: 40%;
    }

</style>