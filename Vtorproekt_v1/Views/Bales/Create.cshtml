@using Vtorproekt.Models;
@model Vtorproekt.Models.Bale

@{
    ViewData["Title"] = "Новый тюк";
}

<h1>Новый тюк</h1>

<h4>Добавить</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>

                <select asp-for="EmployeeId">

                    @foreach (Employee employee in ViewBag.Employee)
                    {
                        <option value="@employee.EmployeeId">@employee.EmployeeName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="MaterialId" class="control-label"></label>
                <select asp-for="MaterialId">

                    @foreach(Material material in ViewBag.Material)
                    {
                        <option value = "@material.MaterialId">@material.MaterialName</option>
                    }
                </select>

            </div>

          
            <div class="form-group">
                <button type="submit" style="background: none; border: none;">
                    <img src="/ico/add2.png" alt="Create" class="iconBig" />
                </button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку тюков</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
