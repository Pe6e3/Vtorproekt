<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vtorproekt_v1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vtorproekt_v1.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kosugi+Maru&family=Neucha&family=Raleway:ital,wght@0,400;0,800;1,400&family=Rubik+Mono+One&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-dark bg-dark  navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/img/VPlogo.png" style="height:80px;width:auto;" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Bales" asp-action="Index">Реест тюков</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">Работники</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Materials" asp-action="Index">Виды сырья</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Productions" asp-action="Index">Журнал производства</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Storages" asp-action="Index">Склады</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Taxes" asp-action="Index">Тарифы</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WorkTypes" asp-action="Index">Виды работ</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Vtorproekt_v1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

  <style>
      header{
          margin-bottom:120px;
      }
    .navbar {
        box-shadow: 0 8px 128px rgba(0, 0, 0, 0.3);
    }

      .nav-link{
          font-size:calc(10px + 1vw);
          margin-right:30px;
          font-weight:bold;
          text-align:center;
        /*font-family: 'Kosugi Maru', sans-serif;*/
        /*font-family: 'Neucha', cursive;*/
        font-family: 'Raleway', sans-serif;
        /*font-family: 'Rubik Mono One', sans-serif;*/
          transition:0.5s;
      }
      .nav-link:hover{
            transition: 0.5s;
            transform:scale(1.07);
      }

  </style>

