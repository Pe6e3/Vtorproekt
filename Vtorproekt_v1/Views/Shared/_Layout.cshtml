        <nav class="navbar fixed-top navbar-dark bg-dark  navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/img/VPlogo.png" style="height:80px;width:auto;" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Bales" asp-action="Index">Реест тюков</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">Работники</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Materials" asp-action="Index">Виды сырья</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Productions" asp-action="Index">Журнал производства</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Storages" asp-action="Index">Склады</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Taxes" asp-action="Index">Тарифы</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WorkTypes" asp-action="Index">Виды работ</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Vtorproekt_v1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>





@*звуки*@
<script>

    // Звук при наведении на любые ссылки, кроме ссылок Навбара
    const links = document.querySelectorAll('a');
    const navLinks = document.querySelectorAll('nav a');

    links.forEach((link) => {
        if (!Array.from(navLinks).includes(link)) { // проверяем, что ссылка не находится в navLinks
            link.addEventListener('mouseover', () => {
                const hoverSound = new Audio("/sounds/hover2.mp3");
                hoverSound.play();
            });

            // Звук при Нажатии на любую ссылку кроме Навбара
            link.addEventListener('mousedown', (event) => {
                // Проверяем, что нажатие было левой кнопкой мыши
                if (event.button === 0) {
                    const clickSound = new Audio("/sounds/click.mp3");
                    clickSound.play();
                }
            });
        }
    });

    // Звук при создании нового объекта (пока не работает - звук перестает играть при переходе не новую страницу)
    const createButtons = document.querySelectorAll('input[value="Create"]');
    createButtons.forEach((button) => {
        button.addEventListener('mousedown', () => {
            const createSound = new Audio("/sounds/done1.mp3");
            createSound.play();
        });
    });

    // Звук при наведении на ссылки Навбара
    navLinks.forEach((link) => {
        link.addEventListener('mouseover', () => {
            const hoverSound = new Audio("/sounds/hover1.mp3");
            hoverSound.play();
        });

        // Звук при Нажатии на любую ссылку  Навбара
        link.addEventListener('mousedown', (event) => {
            // Проверяем, что нажатие было левой кнопкой мыши
            if (event.button === 0) {
                const clickSound = new Audio("/sounds/click2.mp3");
                clickSound.play();
            }
        });
    });
</script>



